{
  "compilerOptions": {
    "incremental": true,
    "target": "es2020",
    "lib": ["es2020"],
    "types": ["node"],
    "moduleResolution": "node",
    "module": "commonjs",
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "strict": true,    
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,              
    "alwaysStrict": true,                
    "noUnusedLocals": true,              
    "noUnusedParameters": true,          
    "noImplicitReturns": true,           
    "esModuleInterop": true,             
    "skipLibCheck": true,                
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "core/*": ["src/core/*"],
      "app/*": ["src/app/*"],
      "reader/*": ["src/reader/*"],
      "matrix": ["src/matrix/index.ts"],
      "matrix/coordinate": ["src/matrix/coordinate.ts"]
    }
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
